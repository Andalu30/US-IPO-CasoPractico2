<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeleccionTipo">

    <TextView
            android:text="Seleccione el tipo de cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"/>
    <Button
            android:text="DNI"
            android:layout_width="290dp"
            android:layout_height="82dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dni" app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="36sp"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text="NIE"
            android:layout_width="290dp"
            android:layout_height="82dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/nie" app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/dni" android:textSize="36sp"
            android:backgroundTint="@android:color/holo_orange_dark"/>
</android.support.constraint.ConstraintLayout>