<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".select_hora">

    <CalendarView
            android:layout_width="328dp"
            android:layout_height="298dp"
            android:id="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
            android:text="Seleccione la fecha y hora deseada"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/textView8"
            android:textAppearance="@android:style/TextAppearance.Material.Headline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="9:00"
            android:layout_width="299dp"
            android:layout_height="39dp"
            android:id="@+id/verde1"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintHorizontal_bias="0.482"/>
    <Button
            android:text="13:00"
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:id="@+id/verde2"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintHorizontal_bias="0.513"/>
    <Button
            android:text="10:00-12:00"
            android:layout_width="299dp"
            android:layout_height="39dp"
            android:id="@+id/button3"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/verde1"/>
    <Button
            android:text="16:00-19:00"
            android:layout_width="296dp"
            android:layout_height="41dp"
            android:id="@+id/button9"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verde2" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="20:00"
            android:layout_width="300dp"
            android:layout_height="39dp"
            android:id="@+id/verde3"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/button9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>