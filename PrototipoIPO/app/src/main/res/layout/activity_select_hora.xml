<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".select_hora">

    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Seleccione la fecha y hora deseada"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            tools:layout_editor_absoluteX="19dp" android:id="@+id/textView8"
            android:textAppearance="@android:style/TextAppearance.Material.Headline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="9:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verde1"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/verde2" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calendarView"/>
    <Button
            android:text="13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verde2"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toTopOf="@+id/button9" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="10:00"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/verde1"
            app:layout_constraintEnd_toStartOf="@+id/button11" android:layout_marginEnd="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="16:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="16dp"/>
    <Button
            android:text="17:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintStart_toEndOf="@+id/verde2"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="18:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/button10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"/>
    <Button
            android:text="19:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/button11"
            app:layout_constraintStart_toEndOf="@+id/button4" android:layout_marginStart="116dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.021"/>
    <Button
            android:text="20:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verde3"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button12"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="20dp"/>
</android.support.constraint.ConstraintLayout>