<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Confirmacion">

    <TextView
            android:text="Se ha confirmado su cita"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView14" android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/lorenipsum"
            android:layout_width="372dp"
            android:layout_height="252dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView15" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"/>
    <CheckBox
            android:text="Enviarme un SMS"
            android:layout_width="154dp"
            android:layout_height="42dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/checkBox" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintHorizontal_bias="0.167"/>
    <CheckBox
            android:text="Enviarme un email"
            android:layout_width="162dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/checkBox2" app:layout_constraintHorizontal_bias="0.174" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"/>
    <CheckBox
            android:text="AÃ±adir a mi calendario"
            android:layout_width="236dp"
            android:layout_height="33dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/checkBox4" app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"/>
    <Button
            android:text="Finalizar"
            android:layout_width="231dp"
            android:layout_height="43dp"
            android:id="@+id/fin" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"/>
    <EditText
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Numero de telefono"
            app:layout_constraintStart_toEndOf="@+id/checkBox" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintHorizontal_bias="0.666"/>
    <EditText
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:ems="10"
            android:id="@+id/editText10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:inputType="textEmailAddress" android:hint="Correo Electronico"
            app:layout_constraintStart_toEndOf="@+id/checkBox2" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText9"/>
</android.support.constraint.ConstraintLayout>